<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical" >
    <GridLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="10"
    android:columnCount="4" >
    <ImageButton
        android:id="@+id/btn_trophy_00"
        android:background="@drawable/btn_trophee"
        android:text="0"
        android:layout_row = "0"
        android:layout_column = "0"
        android:layout_margin="@dimen/btn_padding" />
    <ImageButton
        android:id="@+id/btn_trophy_01"
        android:background="@drawable/btn_trophee"
        android:text="1"
        android:layout_row = "0"
        android:layout_column = "1"
        android:layout_margin="@dimen/btn_padding" />
    <ImageButton
        android:id="@+id/btn_trophy_02"
        android:background="@drawable/btn_trophee"
        android:text="2"
        android:layout_row = "0"
        android:layout_column = "2"
        android:layout_margin="@dimen/btn_padding" />
    <ImageButton
        android:id="@+id/btn_trophy_03"
        android:background="@drawable/btn_trophee"
        android:text="3"
        android:layout_row = "0"
        android:layout_column = "3"
        android:layout_margin="@dimen/btn_padding" />
    <ImageButton
        android:id="@+id/btn_trophy_04"
        android:background="@drawable/btn_trophee"
        android:text="4"
        android:layout_row = "1"
        android:layout_column = "0"
        android:layout_margin="@dimen/btn_padding" />
    <ImageButton
        android:id="@+id/btn_trophy_05"
        android:background="@drawable/btn_trophee"
        android:text="5"
        android:layout_row = "1"
        android:layout_column = "1"
        android:layout_margin="@dimen/btn_padding" />

    </GridLayout>
</LinearLayout>