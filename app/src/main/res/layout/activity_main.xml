<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical"
    android:background="@color/colorBlack">

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation = "vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/corps">

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/ecran"
            android:orientation="vertical">


            <HorizontalScrollView
                android:id="@+id/scrollTop"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="top|right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/affichage1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
            <!-- android:scrollbars="horizontal" -->
            <HorizontalScrollView
                android:id="@+id/scrollDown"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/affichage2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal" />
            </HorizontalScrollView>
        </LinearLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:rowCount="5"
            android:columnCount="4">
            <ImageButton
                android:id="@+id/btn_0"
                android:background="@drawable/btn_0"
                android:tag="0"
                android:layout_row = "4"
                android:layout_column = "1"
                android:layout_margin="@dimen/btn_padding"
                />
            <ImageButton
                android:id="@+id/btn_1"
                android:background="@drawable/btn_1"
                android:tag="1"
                android:layout_row = "3"
                android:layout_column = "0"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_2"
                android:background="@drawable/btn_2"
                android:tag="2"
                android:layout_row = "3"
                android:layout_column = "1"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_3"
                android:background="@drawable/btn_3"
                android:tag="3"
                android:layout_row = "3"
                android:layout_column = "2"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_4"
                android:background="@drawable/btn_4"
                android:tag="4"
                android:layout_row = "2"
                android:layout_column = "0"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_5"
                android:background="@drawable/btn_5"
                android:tag="5"
                android:layout_row = "2"
                android:layout_column = "1"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_6"
                android:background="@drawable/btn_6"
                android:tag="6"
                android:layout_row = "2"
                android:layout_column = "2"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_7"
                android:background="@drawable/btn_7"
                android:tag="7"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_8"
                android:background="@drawable/btn_8"
                android:tag="8"
                android:layout_row = "1"
                android:layout_column = "1"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_9"
                android:background="@drawable/btn_9"
                android:tag="9"
                android:layout_row = "1"
                android:layout_column = "2"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_dot"
                android:background="@drawable/btn_point"
                android:tag="."
                android:layout_row = "4"
                android:layout_column = "2"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_div"
                android:background="@drawable/btn_div"
                android:tag="/"
                android:layout_row = "0"
                android:layout_column = "2"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_mult"
                android:background="@drawable/btn_mult"
                android:tag="x"
                android:layout_row = "0"
                android:layout_column = "3"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_plus"
                android:background="@drawable/btn_plus"
                android:tag="+"
                android:layout_row = "2"
                android:layout_column = "3"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_minus"
                android:background="@drawable/btn_moins"
                android:tag="-"
                android:layout_row = "1"
                android:layout_column = "3"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_equal"
                android:background="@drawable/btn_egal"
                android:tag="="
                android:layout_row = "3"
                android:layout_column = "3"
                android:layout_rowSpan="2"
                android:layout_margin="@dimen/btn_padding" />
            <ImageButton
                android:id="@+id/btn_cancel"
                android:background="@drawable/btn_cancel"
                android:tag="C"
                android:layout_row = "4"
                android:layout_column = "0"
                android:layout_margin="@dimen/btn_padding" />

            <ImageButton
                android:id="@+id/btn_trophy"
                android:layout_width="wrap_content"
                android:layout_column="0"
                android:layout_margin="@dimen/btn_padding"
                android:layout_row="0"
                android:background="@drawable/btn_trophee"
                android:tag="trophy" />
            <ImageButton
                android:id="@+id/btn_caca"
                android:background="@drawable/btn_caca"
                android:tag="caca"
                android:layout_row = "0"
                android:layout_column = "1"
                android:layout_margin="@dimen/btn_padding" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>
